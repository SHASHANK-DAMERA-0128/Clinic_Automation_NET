@model IEnumerable<Clinic_Automation.Models.Physician>


<p class="btn btn-primary">
    <a href="@Url.Action("CreateAdminPhysician", "Admin")" class="text-decoration-none text-white">
        Create New Physician
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialization)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhysicianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhysicianNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAdminPhysician", new { id = item.PhysicianID }, new { @class = "btn btn-outline-primary" })
                @Html.ActionLink("Details", "DetailsAdminPhysician", new { id = item.PhysicianID }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Delete", "DeleteAdminPhysician", new { id = item.PhysicianID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>


<div class="btn btn-secondary">
    <a class="text-decoration-none text-white" href="@Url.Action("Index", "Admin")">Back to List</a>
</div>
